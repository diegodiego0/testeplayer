              mimeType = 'video/mp4';
            } else if (extension === 'webm') {
              mimeType = 'video/webm';
            } else if (extension === 'ogv') {
              mimeType = 'video/ogg';
            } else if (extension === 'm3u8' || extension === 'm3u') {
              mimeType = 'application/x-mpegURL';
            } else if (extension === 'ts') {
              mimeType = 'video/mp2t';
            }
          } else if (extension === 'mp3' || extension === 'aac' || extension === 'ogg') {
